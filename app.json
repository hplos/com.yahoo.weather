{
  "id": "com.yahoo.weather",
  "version": "1.0.9",
  "compatibility": ">=0.8.30",
  "category": "internet",
  "name": {
    "en": "Weather",
    "nl": "Weer"
  },
  "description": {
    "en": "Weather information from Yahoo",
    "nl": "Weer informatie van Yahoo"
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.nl"
  },
  "permissions": [
    "homey:manager:geolocation",
    "homey:manager:speech-output",
    "homey:manager:speech-input",
    "homey:manager:ledring"
  ],
  "flow": {
    "triggers": [
      {
        "id": "wind_chill",
        "title": {
          "en": "Wind chill changed",
          "nl": "Gevoelstemperatuur is veranderd"
        },
        "tokens": [
          {
            "name": "degrees",
            "title": {
              "en": "degrees",
              "nl": "graden"
            },
            "example": {
              "en": "61"
            }
          }
        ]
      },
      {
        "id": "wind_direction",
        "title": {
          "en": "Wind direction changed",
          "nl": "Windrichting is veranderd"
        },
        "tokens": [
          {
            "name": "degrees",
            "title": {
              "en": "degrees",
              "nl": "graden"
            },
            "example": {
              "en": "35"
            }
          }
        ]
      },
      {
        "id": "wind_speed",
        "title": {
          "en": "Wind speed changed",
          "nl": "Windsnelheid is veranderd"
        },
        "tokens": [
          {
            "name": "kph",
            "title": {
              "en": "kph",
              "nl": "km/u"
            },
            "example": {
              "en": "22"
            }
          }
        ]
      },
      {
        "id": "atmosphere_humidity",
        "title": {
          "en": "Atmosphere humidity changed",
          "nl": "Luchtvochtigheid is veranderd"
        },
        "tokens": [
          {
            "name": "percent",
            "title": {
              "en": "percent",
              "nl": "percentage"
            },
            "example": {
              "en": "82"
            }
          }
        ]
      },
      {
        "id": "atmosphere_pressure",
        "title": {
          "en": "Atmosphere pressure changed",
          "nl": "Luchtvochtigheid is veranderd"
        },
        "tokens": [
          {
            "name": "mb",
            "title": {
              "en": "hPa",
              "nl": "hPa"
            },
            "example": {
              "en": "1017"
            }
          }
        ]
      },
      {
        "id": "atmosphere_visibility",
        "title": {
          "en": "Atmosphere visibility changed",
          "nl": "Zichtbaarheid is veranderd"
        },
        "tokens": [
          {
            "name": "km",
            "title": {
              "en": "kilometres",
              "nl": "kilometers"
            },
            "example": {
              "en": "15"
            }
          }
        ]
      },
      {
        "id": "astronomy_sunrise",
        "title": {
          "en": "Sunrise time changed",
          "nl": "Zonsopgang moment is veranderd"
        },
        "tokens": [
          {
            "name": "time",
            "title": {
              "en": "time",
              "nl": "tijd"
            },
            "example": {
              "en": "6:15 am"
            }
          }
        ]
      },
      {
        "id": "astronomy_sunset",
        "title": {
          "en": "Sunset time changed",
          "nl": "Zonsondergang moment is veranderd"
        },
        "tokens": [
          {
            "name": "time",
            "title": {
              "en": "time",
              "nl": "tijd"
            },
            "example": {
              "en": "9:32 pm"
            }
          }
        ]
      },
      {
        "id": "temperature",
        "title": {
          "en": "Temperature changed",
          "nl": "Temperatuur is veranderd"
        },
        "tokens": [
          {
            "name": "temperature",
            "title": {
              "en": "temp",
              "nl": "temp"
            },
            "example": {
              "en": "23"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "atmosphere_rising",
        "title": {
          "en": "Barometric pressure !{{is|is not}}",
          "nl": "Barometrische druk !{{is|is niet}}"
        },
        "args": [
          {
            "name": "status",
            "type": "dropdown",
            "values": [
              {
                "id": "steady",
                "label": {
                  "en": "Steady",
                  "nl": "Constant"
                }
              },
              {
                "id": "falling",
                "label": {
                  "en": "Falling",
                  "nl": "Dalende"
                }
              },
              {
                "id": "rising",
                "label": {
                  "en": "Rising",
                  "nl": "Oplopend"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "speech": {
    "en": {
      "element": {
        "weatherReg": {
          "type": "regex",
          "value": "(the\\s)?weather"
        },
        "temperatureReg": {
          "type": "regex",
          "value": "((the\\s)?temperature|how\\s(hot|warm|cold))"
        }
      },
      "group": {
        "weatherRequest": {
          "set": "weatherReg && (LOCATION) && (TIME)",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true
        },
        "temperatureRequest": {
          "set": "temperatureReg && (LOCATION) && (TIME)",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true
        }
      }
    },
    "nl": {
      "element": {
        "weatherReg": {
          "type": "regex",
          "value": "(weer\\swordt?\\shet|(wordt?|is)\\shet\\s(goed\\s|mooi\\s|lekker\\s|slecht\\s|fijn\\s)?weer)"
        },
        "temperatureReg": {
          "type": "regex",
          "value": "((de\\s)?temperatuur|hoe\\s(warm|heet|koud|koel)\\s(wordt?|gaat|zal)\\shet)"
        }
      }
    }
  },
  "speechExamples": {
    "en": [
      "What is the current outside temperature?",
      "What is the weather for tomorrow?",
      "What will the weather be in Amsterdam this friday?",
      "What is the current temperature in Casablanca?"
    ],
    "nl": [
      "Hoe warm is het buiten?",
      "Hoe is het weer morgen?",
      "Hoe is het weer in Parijs aankomende vrijdag?",
      "Hoe warm is het in Casablanca?"
    ]
  }
}